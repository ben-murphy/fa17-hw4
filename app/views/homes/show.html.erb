<div>
  <h2>Everything in all Databases:</h2>

<h2>Everything in Cats</h2>
<% @cats.each do |cat| %>
  <h2><b><%= cat.id %></b></h2>
  <h2><b><%= cat.name %></b></h2>
  <br />
<% end %>

<h2>Everything in Todo</h2>
<% @todos.each do |todo| %>
  <h2><b><%= todo.id %></b></h2>
  <h2><b><%= todo.tasks %></b></h2>
  <h2><b><%= todo.finished %></b></h2>
  <br />
<% end %>

<h2>Everything in User</h2>
<% @users.each do |user| %>

  <h2><b><%= user.id %></b></h2>
  <h2><b><%= user.username %></b></h2>
  <h2><b><%= user.email %></b></h2>
  <br />
<% end %>

</div>